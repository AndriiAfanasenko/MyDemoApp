<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="SampleTabsTheme.Base" parent="Theme.AppCompat.NoActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="colorControlNormal">@color/primary_text</item>
    <item name="textColorAlertDialogListItem">@color/primary_text</item>
    <item name="android:windowBackground">@android:color/white</item>
  </style>

  <style name="SampleTabsTheme" parent="SampleTabsTheme.Base">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="windowActionModeOverlay">false</item>
  </style>

  <style name="SampleTabsTheme.SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="android:navigationBarColor">@color/primary_dark</item>
  </style>

  <style name="SampleTabsToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:textColorPrimary">@color/black</item>
    <item name="colorAccent">@android:color/white</item>
    <item name="colorControlNormal">@color/tab_indicator</item>
    <item name="colorControlActivated">@color/tab_indicator</item>
  </style>

  <style name="SampleTabsTabLayout" parent="Widget.Design.TabLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="tabIndicatorColor">@color/tab_indicator</item>
    <item name="tabSelectedTextColor">@color/tab_selected_text</item>
    <item name="tabTextColor">@color/tab_unselected_text</item>
    <item name="tabIndicatorHeight">4dp</item>
    <item name="tabTextAppearance">@android:style/TextAppearance.Medium</item>
  </style>

  <style name="EditTextBaseStyle" parent="Widget.AppCompat.EditText">
    
    <item name="android:textColor">@color/hint_color</item>

</style>
    
   <style name="EditTextHintStyle" parent="Widget.AppCompat.EditText">
    <item name="android:textColor">@color/hint_color</item>
            <item name="android:textStyle">normal</item>
    <item name="android:textSize">16sp</item>
</style>
</resources>